    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Mechanus Server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}\\main.go",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": [
                "server"
            ],
            "env": {
                "LOG_LEVEL": "debug",
                "LOG_FORMAT": "text",
                "LOG_REPORT_CALLER": "true",
            }
        }
    ]
}